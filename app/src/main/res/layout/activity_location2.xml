<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivity"
    android:orientation="horizontal"
    android:gravity="center">

    <View
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/header_bg">

    </View>
    <TextView
        android:layout_marginTop="25dp"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:textAlignment="center"
        android:text="NEARBY MECHANICAL SHOPS DETAILS"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/title"/>
    <ImageView
        android:id="@+id/shortcut"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="340dp"
        android:layout_weight="1"
        android:layout_width="57dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/home"
        tools:ignore="VectorDrawableCompat" />
        <Button
            android:id="@+id/locbutton"
            android:textColor="@color/colorWhite"
            android:background="@color/colorrose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_below="@+id/title"
            android:layout_marginTop="130dp"
            android:text=" GET LOCATION " />
        <ProgressBar
            android:id="@+id/Progressbar"
            android:layout_below="@id/locbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"/>

    <TextView
        android:id="@+id/latlong"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/Progressbar"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
            android:id="@+id/Address"
            android:layout_below="@+id/latlong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"/>
    <Button
        android:id="@+id/nearbyloc"
        android:textColor="@color/colorWhite"
        android:background="@color/colorrose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/Address"
        android:layout_marginTop="20dp"
        android:text="Fetch nearby mechanical shops details" />
    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bottom_bg"/>
    </LinearLayout>



</RelativeLayout>